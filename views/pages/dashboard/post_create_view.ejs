<div class="">
    <h1>Create post</h1>
    <form action="/dashboard/create-post" method="post">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" placeholder="Enter the title of the post">
        <label for="excerpt">Excerpt</label>
        <input type="text" name="excerpt" id="excerpt" value="<%= post.excerpt %>" placeholder="Enter a brief summary of the post">
        <label for="body">Body</label>
        <textarea name="body" id="body"  placeholder="Enter body of the post"><%= post.body %></textarea>
        <input type="submit" value="Create" class="button">
    </form>
</div>