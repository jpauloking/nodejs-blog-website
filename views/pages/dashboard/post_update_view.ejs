<div class="">
    <h1>Update post</h1>
    <form action="/dashboard/update-post" method="post">
        <input type="hidden" name="id" value="<%= post.id %>">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" placeholder="Enter the title of the post">
        <label for="excerpt">Excerpt</label>
        <input type="text" name="excerpt" id="excerpt" value="<%= post.excerpt %>" placeholder="Enter a brief summary of the post">
        <label for="body">Body</label>
        <textarea name="body" id="body" rows="10"  placeholder="Enter body of the post"><%= post.body %></textarea>
        <input type="submit" value="Update" class="button">
    </form>
</div>